form.login-form
    p.form-header(translate="LOGIN_FORM.HEADER")
    fieldset
        input(type="text", name="username", ng-model="dataLogin.username", data-required="true",
              placeholder="{{'LOGIN_FORM.PLACEHOLDER_AUTH_NAME' | translate}}")
    fieldset.login-password
        input(type="password", name="password", ng-model="dataLogin.password", data-required="true",
              placeholder="{{'LOGIN_FORM.PLACEHOLDER_AUTH_PASSWORD' | translate}}")
        a.forgot-pass(href="", tg-nav="forgot-password", title="{{'LOGIN_FORM.TITLE_LINK_FORGOT_PASSWORD' | translate}}", translate="LOGIN_FORM.LINK_FORGOT_PASSWORD")
    fieldset
        button.button-login.button-gray.submit-button(type="submit", title="{{'LOGIN_FORM.ACTION_SIGN_IN' | translate}}", translate="LOGIN_FORM.ACTION_SIGN_IN")

    fieldset(ng-repeat="plugin in contribPlugins|filter:{type: 'auth'}", ng-include="plugin.template")
